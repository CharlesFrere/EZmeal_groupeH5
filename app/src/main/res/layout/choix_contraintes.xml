<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ChoixContraintes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="1000dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:layout_weight="0.97">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Choix des contraintes"
                android:textSize="24sp"
                android:textStyle="bold|italic"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <EditText
                android:id="@+id/editText7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editText"
                android:layout_marginTop="33dp"
                android:ems="10"
                android:hint="Indésiré 1"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editText6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editText7"
                android:ems="10"
                android:hint="Indésiré 2"
                android:inputType="textPersonName" />


            <EditText
                android:id="@+id/editText5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editText6"
                android:ems="10"
                android:hint="Indésiré 3"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editText3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/textView7"
                android:layout_marginTop="29dp"
                android:ems="10"
                android:hint="Préférence 1"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editText3"
                android:ems="10"
                android:hint="Préférence 2"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editText2"
                android:ems="10"
                android:hint="Préférence 3"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_weight="0.07"
                android:text="Vos aliments favoris"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@+id/textView6"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editText"
                android:layout_marginTop="12dp"
                android:layout_weight="0.03"
                android:text="Aliments non désirés"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/editText5"
                android:layout_weight="0.03"
                android:text="contraintes alimentaires"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/textView11"
                android:layout_centerHorizontal="true">

                <ListView
                    android:layout_marginTop="40dp"
                    android:id="@+id/checkable_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:id="@+id/buttonEnr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="showSelectedItems"
                    android:text="Enregister"
                    android:textSize="10sp"
                    android:gravity="right"
                    android:layout_marginEnd="40dp"
                    android:layout_alignTop="@+id/button"
                    android:layout_alignParentEnd="true" />

                <Button
                    android:id="@+id/buttonChoix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="11dp"
                    android:text="Choisir"
                    android:onClick="onBtnClick"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>


        </RelativeLayout>


    </ScrollView>
</LinearLayout>